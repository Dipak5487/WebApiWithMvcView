@model Core.Models.UserModel
@{
    ViewData["Title"] = "Edit Create";
    Layout = null;
}
<form enctype="multipart/form-data" asp-controller="home" asp-action="edit" method="post" class="mt-3">
        <input hidden asp-for="Id" />
        <input hidden asp-for="ExistingPhotoPath" />
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EmailId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="EmailId" class="form-control" placeholder="EmailId" />
                @*<span asp-validation-for="Email" class="text-danger"></span>*@
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DOB" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                 <input asp-for="DOB" type="date" id="form3Example4c" class="form-control" />                
            </div>
        </div>
         <div class="form-group row">
            <label asp-for="Country" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                 <input asp-for="Country" type="text" id="form3Example4c" class="form-control" />                
            </div>
        </div>

         <div class="form-group row">
            <label asp-for="MobileNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                 <input asp-for="MobileNumber" type="text" id="form3Example4c" class="form-control" />                
            </div>
        </div>       

        <div class="form-group row">
            <div class="col-sm-10">
                <div asp-validation-summary="All" class="text-danger"></div>
                <button type="submit" class="btn btn-primary" asp-controller="home" asp-action="edit">Submit </button>
                <a asp-controller="home" asp-action="index" class="btn btn-primary m-1">Cancel</a>
            </div>
        </div>
       
    </form>